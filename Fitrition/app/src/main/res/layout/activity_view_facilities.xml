<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent_grey"
    tools:context=".ViewFacilities">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/viewFacilitiesImage"
            android:layout_width="413dp"
            android:layout_height="174dp"
            app:srcCompat="@drawable/ic_avocado" />

        <Button
            android:id="@+id/viewFacilitiesButton"
            android:layout_width="404dp"
            android:layout_height="56dp"
            android:text="Click to view Healthy Food" />

        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/viewFacilitiesFragmentContainer"
            android:name="com.example.fitrition.facilityDisplay"
            android:layout_width="match_parent"
            android:layout_height="506dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>